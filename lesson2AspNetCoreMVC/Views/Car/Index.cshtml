@model List<lesson2AspNetCoreMVC.Models.CarViewModel>
@{
    ViewData["Title"] = "Car list";
}
<h4 class="text-info">List of cars</h4>
<a class="btn btn-primary" asp-area="" asp-controller="Car" asp-action="Add">Add Car</a>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Company</th>
            <th>Model</th>
            <th>ManufactureYear</th>
            <th>AddintionalInformation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var car in Model)
            {
                <tr>
                    <td>@car.Id</td>
                    <td>@car.Company</td>
                    <td>@car.Model</td>
                    <td>@car.ManufactureYear</td>
                    <td>@car.AdditionalInformation</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center" colspan="5">empty</td>
            </tr>
        }
    </tbody>
</table>